<Application x:Class="VolunteerP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:utilities="clr-namespace:VolunteerP.Utilities"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Images.xaml" />
                <ResourceDictionary Source="Style/Buttons.xaml"/>
                <ResourceDictionary Source="Style/Text.xaml"/>
                <ResourceDictionary Source="Style/Page.xaml"/>
                <ResourceDictionary Source="Utilities\DataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <utilities:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
    
