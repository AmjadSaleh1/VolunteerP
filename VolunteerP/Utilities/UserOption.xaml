<UserControl x:Class="VolunteerP.Utilities.UserOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VolunteerP.Utilities"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             Name="userOption">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Style="{StaticResource Buttonk}">
                <fa:ImageAwesome Icon="{Binding Path=Icon,ElementName=userOption}" Width="15"
                                 Height="15" Foreground="white"/>
            </Button>
            <TextBlock Text="{Binding Path=Text,ElementName=userOption}" Foreground="#363636"
                       VerticalAlignment="Center"
                       Margin="10 0 20 0" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</UserControl>
