<Window x:Class="VolunteerP.View.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VolunteerP.View"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        WindowStyle="none"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Title="SignUp" Height="650" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
       </Grid.ColumnDefinitions>
        <!--/left Section/-->
        <Border CornerRadius="25 0 0 25">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3AA9AD" Offset="0"/>
                    <GradientStop Color="#3AADA1" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel VerticalAlignment="Center">
                <Image Source="C:\Users\amjad\source\repos\VolunteerP\VolunteerP\Images\profile-circle.png"
                       Width="160" Height="160" Margin="0 0 0 40"/>
                <TextBlock Text="Welcome! Sign up to connect" TextAlignment="Center"
                           FontWeight="SemiBold"
                           FontSize="26" Foreground="black"/>
                <TextBlock TextWrapping="Wrap" FontSize="16"
                           TextAlignment="Center"
                           Foreground="black"
                           Margin="0 20 0 20"
                           Text="Please Fill all youre information to continue"/>
                <Button Style="{StaticResource ButtonBlack}">
                    <fa:ImageAwesome Icon="AngleRight"
                                    Width="25" Height="25"
                                    Foreground="green"
                                    Margin="3 0 0 0"/>
                </Button>
            </StackPanel>
        </Border>
        <Border Background="#ffffff" Grid.Column="1" CornerRadius="10 0 0 10"
         MouseDown="Border_MouseDown">
           
        </Border>
       
        <!--//input section//-->
        
        
        
    </Grid>
</Window>
